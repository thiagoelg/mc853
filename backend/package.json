{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node -r ts-node/register ./src/index.ts",
    "start:watch": "nodemon -L --verbose",
    "build": "tsc",
    "knex:migrate:make": "knex --cwd src migrate:make",
    "knex:migrate:latest": "knex --cwd src migrate:latest",
    "knex:migrate:rollback": "knex --cwd src migrate:rollback",
    "knex:seed:make": "knex --cwd src seed:make",
    "knex:seed:run": "knex --cwd src seed:run",
    "docker:knex:migrations:run": "docker exec -ti RESPONSIVE_BACKEND npm run knex:migrate:latest",
    "docker:knex:seed:run": "docker exec -ti RESPONSIVE_BACKEND npm run knex:seed:run",
    "docker:build": "docker-compose build",
    "docker:start": "docker-compose up -d",
    "docker:stop": "docker-compose stop",
    "docker:down": "docker-compose down -v"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts, js, json"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/dotenv-safe": "^8.1.0",
    "@types/jsonwebtoken": "^8.5.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.1",
    "express-bearer-token": "^2.4.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^2.4.0",
    "knex-paginate": "^1.2.3",
    "multer": "^1.4.2",
    "nodemon": "^2.0.3",
    "objection": "^2.1.3",
    "pg": "^8.0.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/multer": "^1.4.3",
    "@types/node": "^13.13.4",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  }
}
